package snake;

import gui::GUI;

public class Snake : GameObject
{
	public Snake()
	{
		super();
		i->int = 0;
		while(i < s.length)
		{
			s[i][0] = i;
			s[i][1] = 0;
			++i;
		}
	}
	
	public update()
	{
		i->int = 0;
		while(i<s.length)
		{
			gui.draw(s[i][0], s[i][1], 'o');
			++i;
		}
	}
	
	public move(x->int, y->int)
	{
		i->int=0;
		while(i+1<s.length)
		{
			s[i][0] = s[i+1][0];
			s[i][1] = s[i+1][1];
			++i;
		}
		s[s.length-1][0] = x;
		s[s.length-1][1] = y;
	}
	
	public getX()->int
	{
		return s[s.length-1][0];
	}
	
	public getY()->int
	{
		return s[s.length-1][1];
	}
	
	s->int[][] = new int[5][2];
}